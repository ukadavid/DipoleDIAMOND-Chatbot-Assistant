{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Funds Reversal Details",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Status: ${status}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Reversed Transactions:",
      "wrap": true
    },
    {
      "type": "Container",
      "items": "${reversedTransactions}"
    }
  ]
}
